{
    "name": "madarlan/pdf-bridge-php",
    "description": "Universal PHP package for converting text, HTML, DOC/DOCX, XLS/XLSX, CSV to PDF using multiple libraries (TCPDF, mPDF, LibreOffice)",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "pdf",
        "converter",
        "tcpdf",
        "mpdf",
        "libreoffice",
        "laravel",
        "doc",
        "docx",
        "xls",
        "xlsx",
        "html"
    ],
    "authors": [
        {
            "name": "MadArlan",
            "email": "madinovarlan@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "tecnickcom/tcpdf": "^6.6",
        "mpdf/mpdf": "^8.2",
        "ncjoes/office-converter": "^1.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/config": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "psr/log": "^1.0|^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0",
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "MadArlan\\PDFBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MadArlan\\PDFBridge\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MadArlan\\PDFBridge\\Laravel\\PDFBridgeServiceProvider"
            ],
            "aliases": {
                "PDFBridge": "MadArlan\\PDFBridge\\Laravel\\PDFBridge"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
